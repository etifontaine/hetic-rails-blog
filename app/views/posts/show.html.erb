<h1><%= @post.title %></h1>
<p><%= @post.content %></p>
<p>PubliÃ© par <%= @post.user.username %></p>
<% unless @post.comments.blank? %>
  <h4>Commentaires</h4>
  <ul>
  <% @post.comments.each do |comment|  %>
    <li><strong><%= comment.user.username %> : </strong><%= comment.content %></li>
    <% if current_user.id === comment.user.id %>
      <%= link_to "Delete comment", comment_path(comment.id), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %>
    <% end %>
  <% end %>
  </ul>
<% else %>
  No comments.
<% end %>
<%= render partial: 'comments/form', locals: { comment: @comment } %>
<% if current_user.id === @post.user.id %>
      <%= link_to "Delete post", post_path(@post.id), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %>
<% end %>
