<h1><%= t "add_article" %></h1>

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <br />
  <%= f.text_field :title, placeholder: true %>
  <br />
  <br />
  <%= f.label :content %>
  <br />
  <%= f.text_area :content, placeholder: true %>
  <br />
  <br />
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.submit %>

<% end %>