<h1><%= t "add_comment" %></h1>

<%= form_for [@comment, Comment.new] do |f| %>
  <%= f.label :content %>
  <br />
  <%= f.text_area :content, placeholder: true %>
  <br />
  <br />
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :post_id, value: @post.id %>
  <%= f.submit 'Envoyer' %>

<% end %>