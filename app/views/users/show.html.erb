<h1><%= @user.username %></h1>
<p><%= @user.email %></p>
<p><%= t "register_at" %> <%= @user.created_at %></p>


<% unless @user.posts.blank? %>
  <h2><%= t "articles" %></h2>
  <% @user.posts.each do |post|  %>
    <h1><%= post.title %></h1>
    <p><%= post.content %></p>
  <% end %>
<% else %>
  <%= t "no_articles" %>
<% end %>